<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="WARN">

<Properties>
	<property name="basePath">./logs</property>
</Properties>

<Appenders>
	<Console name="Console" target="SYSTEM_OUT">
		<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
	</Console>
	
	<RollingFile name="File" fileName="${basePath}/automation.log" filePattern="${basePath}/automation-%d{yyyy-mm-dd}.log.gz">
		<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		<SizeBasedTriggeringPolicy size = "50000" />
	</RollingFile>
		
</Appenders>

<loggers>
	<Root level="Info">           <!--Here you can use multiple log levels All < Trace < Debug < Info < Warn < Error <Fatal -->
		<AppenderRef ref="File" />   <!-- <AppenderRef ref="Console"/> -->
	</Root>
</loggers>
</Configuration>